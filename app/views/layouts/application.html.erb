<!DOCTYPE html>
<html>
  <head>
    <title>BattleshipWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice].html_safe %></div>
  <% elsif flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
  <% end %>
    <%= yield %>
  </body>
</html>
