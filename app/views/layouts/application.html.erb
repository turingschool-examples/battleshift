<!DOCTYPE html>
<html>
  <head>
    <title>BattleshipWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div class="flash">
      <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
      <% end %>
    </div>

    <%= yield %>
    
  </body>
</html>
