<!DOCTYPE html>
<html>
  <head>
    <title>BattleshipWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |name, msg| %>
     <%= content_tag :div, msg.html_safe, class: "#{name} alert alert-primary" %>
    <% end %>
    <%= yield %>
  </body>
</html>
