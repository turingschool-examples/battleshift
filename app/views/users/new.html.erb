<%= form_for @user do |f| %>
  <div class='form_field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='form_field'>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class='form_field'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class='form_field'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

    <%= f.submit 'Submit' %>
<% end %>
