<section class='all'>
  <h1>Logged in as <%= current_user.name %></h1>
  <p>Status: <%=current_user.status.capitalize %>  </p>
  <% if current_user.status == 'active' %>
    <p>Thank you for activating your account.<p>
    <%= link_to 'Log Out', logout_path %>
  <% else %>
    <p>This account has not yet been activated. Please check your email.</p>
  <% end %>
</section>
